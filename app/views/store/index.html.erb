<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.price) %> |
  <% if current_user %>
    <%= button_to 'Add to Cart', line_items_path(item_id: item), method: 'post' %></p>
  <% end %>
<% end %>